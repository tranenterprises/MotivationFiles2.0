{
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "functions": {
    "src/app/api/*/route.ts": {
      "maxDuration": 30
    }
  },
  "crons": [
    {
      "path": "/api/generate-daily-content",
      "schedule": "0 5 * * *"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}